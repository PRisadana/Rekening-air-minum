}

void rumah_tangga_b(){
    float menu, bulanini, bulanlalu, tanggal;
    int pilihdayalistrik;
    int bpmrt = 1000;
    char nama[50];
    char dayalistrik [4] [6]= {"450", "900", "1300", ">1300"};
    int biayadministrasi = 5000;
    int denda;
    int biaya;
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||           Silahkan pilih kategori anda          ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tPelanggan di rumahnya terdapat usaha");
    printf("\n\tsesuai pilihan daya listrik dibawah");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (0) Sumber daya listrik 450 VA                  ||");
    printf("\n\t|| (1) Sumber daya listrik 900 VA                  ||");
    printf("\n\t|| (2) Sumber daya listrik 1300 VA                 ||");
    printf("\n\t|| (3) Sumber daya listrik >1300 VA                ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (4) Kembali ke golongan pengguna usaha          ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan sesuai pilihan anda : ");
    while (scanf  ("%d", &pilihdayalistrik)==0 || pilihdayalistrik<0 || pilihdayalistrik>4){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan sesuai pilihan anda : ");
        while (pilihdayalistrik=getchar() != '\n');
    }
    if (pilihdayalistrik==4){
        close();
        rumahtangga();
    }
    close();

    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||           Non Niaga Tanpa Bersubsidi            ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan nama anda : ");
    scanf("%[^\n]s", &nama);
    printf("\n\tMasukkan tanggal pembayaran :  ");
    while (scanf  ("%f", &tanggal)==0 || tanggal<1 || tanggal>31){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan tanggal pembayaran :  ");
        while (tanggal=getchar() != '\n');
    }
    printf("\n\tMasukkan pemakaian sebelumnya (m^3) :  ");
    while (scanf  ("%f", &bulanlalu)==0){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan pemakaian sebelumnya  (m^3)  :  ");
        while (bulanlalu=getchar() != '\n');
    }
    printf("\n\tMasukkan pemakaian saat ini (m^3) :  ");
    while (scanf  ("%f", &bulanini)==0 || bulanini<bulanlalu){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan pemakaian sebelumnya  (m^3)  :  ");
        while (bulanini=getchar() != '\n');
    }

    float pemakaian = bulanini - bulanlalu;

     if (pemakaian > 100 && tanggal > 15){
        denda = 2000 * pemakaian;
    }else if (pemakaian >= 10 && pemakaian <=100 && tanggal > 15){
        denda = 1000 * pemakaian;
    }else if (tanggal <= 15){
        denda = 0;
    }

    close();

    float biayapemakaian;
    float tarifperkubik;
    if(pemakaian >=0 && pemakaian <=10 && pilihdayalistrik==0){
        biayapemakaian = administrasi + 1000 + (6940*pemakaian) + denda; 
         tarifperkubik = (6940*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilihdayalistrik==0){
        biayapemakaian = administrasi + 1000 + (10400*pemakaian) + denda;
         tarifperkubik = (10400*pemakaian);
    }else if(pemakaian >20 && pilihdayalistrik==0){
        biayapemakaian = administrasi + 1000 + (10700*pemakaian) + denda;
         tarifperkubik = (10700*pemakaian);
    }else if (pemakaian >=0 && pemakaian <=10 && pilihdayalistrik==1){
