#include <stdio.h>
#include <stdlib.h>
#include <math.h>

/*Program ini akan menghitung jumlah tagihan rekening air minum,
dengan cara user memilih jenis golongan dan sumber daya listrik yang digunakan.
Pelanggan akan terkena denda jika membayar diatas tanggal 15 dengan kondisi (Jika pemakaian > 100 m^3 (2000*pemakaian), tapi jika 10<=pemakaian<=100 (1000*pemakaian))
Output akan berisi data data tagihan dan golongan dari pelanggan tersebut*/

#define administrasi 5000

int main();
void golonganpengguna();
void close();
void mulai();
void rumahtangga();
void non_niaga_bersubsidi();
void non_niaga_tanpa_bersubsidi();
void rumah_tangga_b();
void cetaknonniagabersubsidi(int pilihukuranjalan, int pilihdayalistrik, char nama[50], float tanggal, int dayalistrik[2], float pemakaian, int biayaadministrasi, int bpmrt, int denda, float tarifperkubik, float biayapemakaian );
void cetaknonniagatanpabersubsidi(int pilihukuranjalan, int pilihdayalistrik, char nama[50], float tanggal, char dayalistrik[2] [6], float pemakaian, int biayaadministrasi, int bpmrt, int denda, float tarifperkubik, float biayapemakaian);
void cetakrumahtanggab(int pilihdayalistrik, char nama[50], float tanggal, char dayalistrik[4] [6], float pemakaian, int biayaadministrasi, int bpmrt, int denda, float tarifperkubik, float biayapemakaian);
void usaha();
void niaga_kecil();
void cetakniagakecil(char golongan [4] [6], int pilih, char nama[50], float tanggal, char dayalistrik[4] [6],float pemakaian, int biayadministrasi, int bpmu, int denda, float tarifperkubik, float biayapemakaian);
void niaga_sedang();
void cetakniagasedang(char golongan [4] [6], int pilih, char nama[50], float tanggal, char dayalistrik[4] [6],float pemakaian, int biayadministrasi, int bpmu, int denda, float tarifperkubik, float biayapemakaian);
void niaga_besar();
void cetakniagabesar(char golongan [4] [6], int pilih, char nama[50], float tanggal, char dayalistrik[4] [6],float pemakaian, int biayadministrasi, int bpmu, int denda, float tarifperkubik, float biayapemakaian);
void penutup ();
void ulang();

void close(){
    printf("\n\tBerikutnya");
    getchar();
    printf("\n\tTekan enter untuk melanjutkan...");
    getchar();
    system("clear");
}

void mulai(){
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||            Algoritma dan Pemrograman            ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| Resandy Prisadana  2205551050                   ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
}

void ulang(){
    int menu;
    printf ("\n\t========================================================");
    printf ("\n\t||        Apakah anda ingin mengulang program         ||");
    printf ("\n\t========================================================");
    printf ("\n\t(1) Ya, saya ingin menghitung kembali                   ");
    printf ("\n\t(2) Tidak, sudah selesai                                ");
    printf ("\n\t========================================================");
    printf ("\n\tMasukkan angka untuk memilih  :  ");
    while (scanf  ("%d", &menu)==0 || menu<1 || menu>2){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf ("\n\tMasukkan angka untuk memilih   : ");
        while (menu=getchar() != '\n');
    }

    if (menu==1){
        close();
        main();
    }else if (menu==2){
        close();
        penutup();
    }
}

void penutup (){
    printf ("\n\t========================================================");
    printf ("\n\t||    Terima kasih telah menggunakan layanan kami     ||");
    printf ("\n\t||              Salam Hangat Dari Kami                ||");
    printf ("\n\t========================================================");
    printf ("\n\t========================================================");
    printf ("\n\t||                 CV. KADITA WATER                   ||");
    printf ("\n\t========================================================");
    printf ("\n\t||             Air Jernih Gak Bikin Risih             ||");
    printf ("\n\t========================================================");
}

void usaha(){
    int menu;
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||             Golongan Pengguna Usaha             ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (1) Niaga Kecil                                 ||");
    printf("\n\t|| (2) Niaga Sedang                                ||");
    printf("\n\t|| (3) Niaga Besar                                 ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (0) Kembali ke golongan pengguna                ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan golongan Pengguna : ");
    while (scanf  ("%d", &menu)==0 || menu<0 || menu>3){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan golongan Pengguna : ");
        while (menu=getchar() != '\n');
    }
    close();

    if (menu == 1){
        niaga_kecil();
    }else if (menu == 2){
        niaga_sedang();
    }else if (menu == 3){
        niaga_besar();
    }else if(menu==0){
        golonganpengguna();
    }
}

void niaga_kecil(){
    float menu, bulanini, bulanlalu, tanggal;
    int pilih;
    int bpmu = 2000;
    char nama[50];
    char golongan[4] [6] = {"E1-1", "E1-2", "E1-3", "E1-4"};
    char dayalistrik [4] [6]= {"450", "900", "1300", ">1300"};
    int biayadministrasi = 5000;
    int denda;
    int biaya;
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||           Silahkan pilih kategori anda          ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tPelanggan yang memiliki bidang usaha");
    printf("\n\tdi depan usahanya terdapat jalan berukuran");
    printf("\n\t0-6.99 meter termasuk saluran got");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (0) Sumber daya listrik 450 VA                  ||");
    printf("\n\t|| (1) Sumber daya listrik 900 VA                  ||");
    printf("\n\t|| (2) Sumber daya listrik 1300 VA                 ||");
    printf("\n\t|| (3) Sumber daya listrik >1300 VA                ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (4) Kembali ke golongan pengguna usaha          ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan sumber daya listrik yang anda gunakan : ");
    while (scanf  ("%d", &pilih)==0 || pilih<0 || pilih>4){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan sumber daya listrik yang anda gunakan : ");
        while (pilih=getchar() != '\n');
    }
    if (pilih == 4){
        close();
        usaha();
    }
    close();

    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||                   Niaga Kecil                   ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan nama anda : ");
    scanf("%[^\n]s", &nama);
    printf("\n\tMasukkan tanggal pembayaran :  ");
    while (scanf  ("%f", &tanggal)==0 || tanggal<1 || tanggal>31){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan tanggal pembayaran :  ");
        while (tanggal=getchar() != '\n');
    }
    printf("\n\tMasukkan pemakaian sebelumnya (m^3) :  ");
    while (scanf  ("%f", &bulanlalu)==0){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan pemakaian sebelumnya  (m^3)  :  ");
        while (bulanlalu=getchar() != '\n');
    }
    printf("\n\tMasukkan pemakaian saat ini (m^3) :  ");
    while (scanf  ("%f", &bulanini)==0 || bulanini<bulanlalu){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan pemakaian sebelumnya  (m^3)  :  ");
        while (bulanini=getchar() != '\n');
    }

    float pemakaian = bulanini - bulanlalu;
    
    if (pemakaian > 100 && tanggal > 15){
        denda = 2000 * pemakaian;
    }else if (pemakaian >= 10 && pemakaian <=100 && tanggal > 15){
        denda = 1000 * pemakaian;
    }else if (tanggal <= 15){
        denda = 0;
    }

    close();

    float biayapemakaian;
    float tarifperkubik;
    if (pemakaian >=0 && pemakaian <=10 && pilih==0){
        biayapemakaian = administrasi + 2000 + (9200*pemakaian) + denda; 
         tarifperkubik = (9200*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilih==0){
        biayapemakaian = administrasi + 2000 + (9850*pemakaian) + denda;
         tarifperkubik = (9850*pemakaian);
    }else if(pemakaian >20 && pilih==0){
        biayapemakaian = administrasi + 2000 + (10950*pemakaian) + denda;
         tarifperkubik = (10950*pemakaian);
    }else if (pemakaian >=0 && pemakaian <=10 && pilih==1){
        biayapemakaian = administrasi + 2000 + (9500*pemakaian) + denda; 
         tarifperkubik = (9500*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilih==1){
        biayapemakaian = administrasi + 2000 + (10150*pemakaian) + denda;
         tarifperkubik = (10150*pemakaian);
    }else if(pemakaian >20 && pilih==1){
        biayapemakaian = administrasi + 2000 + (11250*pemakaian) + denda;
         tarifperkubik = (11250*pemakaian);
    }else if (pemakaian >=0 && pemakaian <=10 && pilih==2){
        biayapemakaian = administrasi + 2000 + (9800*pemakaian) + denda; 
         tarifperkubik = (9800*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilih==2){
        biayapemakaian = administrasi + 2000 + (10450*pemakaian) + denda;
         tarifperkubik = (10450*pemakaian);
    }else if(pemakaian >20 && pilih==2){
        biayapemakaian = administrasi + 2000 + (11850*pemakaian) + denda;
         tarifperkubik = (11850*pemakaian);
    }else if (pemakaian >=0 && pemakaian <=10 && pilih==3){
        biayapemakaian = administrasi + 2000 + (10100*pemakaian) + denda; 
         tarifperkubik = (10100*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilih==3){
        biayapemakaian = administrasi + 2000 + (10750*pemakaian) + denda;
         tarifperkubik = (10750*pemakaian);
    }else if(pemakaian >20 && pilih==3){
        biayapemakaian = administrasi + 2000 + (11850*pemakaian) + denda;
         tarifperkubik = (11850*pemakaian);
    }

        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\t||                CV. KADITA WATER                 ||");
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\t||           Air Jernih Gak Bikin Risih            ||");
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\tGolongan Niaga Kecil : %s", golongan[pilih]);
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf ("\n\tNama : %s", nama);
        printf ("\n\tTanggal pembayaran : %.0f", tanggal);
        printf ("\n\tSumber Daya Listrik Digunakan = %sVA", dayalistrik[pilih]);
        printf("\n\tPemakaian anda bulan ini = %.0f (m^3)", pemakaian);
        printf ("\n\tBiaya Administrasi      = Rp. %d", biayadministrasi);
        printf ("\n\tBiaya BPM Usaha         = Rp. %d", bpmu);
        printf ("\n\tBiaya denda             = Rp. %d", denda);
        printf ("\n\tBiaya pemakaian air(m^3)= Rp. %.2f", tarifperkubik);
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf ("\n\tjumlah tagihan anda : Rp %.2f", biayapemakaian);

        int cetak;
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\t||  Apakah anda ingin mencetak bukti pembayaran ?  ||");
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\t|| (1) Iyaa                                        ||");
        printf("\n\t|| (2) Tidak                                       ||");
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\tMasukkan pilihan anda : ");
        while (scanf  ("%d", &cetak)==0 || cetak<0 || cetak>2){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan pilihan anda : ");
        while (cetak=getchar() != '\n');
    }
        if (cetak==1){
            cetakniagakecil(golongan , pilih, nama, tanggal, dayalistrik,pemakaian, biayadministrasi, bpmu, denda, tarifperkubik, biayapemakaian);
            ulang();
        }else if(cetak==2){
            close();
            ulang();
        }
}

void niaga_sedang(){
    float menu, bulanini, bulanlalu, tanggal;
    int pilih;
    int bpmu = 2000;
    char nama[50];
    char golongan[4] [6] = {"E2-1", "E2-2", "E2-3", "E2-4"};
    char dayalistrik [4] [6]= {"450", "900", "1300", ">1300"};
    int biayadministrasi = 5000;
    int denda;
    int biaya;
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||           Silahkan pilih kategori anda          ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tPelanggan yang memiliki bidang usaha");
    printf("\n\tdi depan usahanya terdapat jalan berukuran");
    printf("\n\t7-10 meter termasuk saluran got");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (0) Sumber daya listrik 450 VA                  ||");
    printf("\n\t|| (1) Sumber daya listrik 900 VA                  ||");
    printf("\n\t|| (2) Sumber daya listrik 1300 VA                 ||");
    printf("\n\t|| (3) Sumber daya listrik >1300 VA                ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (4) Kembali ke golongan pengguna usaha          ||");
