}

void niaga_besar(){
    float menu, bulanini, bulanlalu, tanggal;
    int pilih;
    int bpmu = 2000;
    char nama[50];
    char golongan[4] [6] = {"E3-1", "E3-2", "E3-3", "E3-4"};
    char dayalistrik [4] [6]= {"450", "900", "1300", ">1300"};
    int biayadministrasi = 5000;
    int denda;
    int biaya;
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||           Silahkan pilih kategori anda          ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tPelanggan yang memiliki bidang usaha");
    printf("\n\tdi depan usahanya terdapat jalan berukuran");
    printf("\n\tdiatas 10 meter termasuk saluran got");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (0) Sumber daya listrik 450 VA                  ||");
    printf("\n\t|| (1) Sumber daya listrik 900 VA                  ||");
    printf("\n\t|| (2) Sumber daya listrik 1300 VA                 ||");
    printf("\n\t|| (3) Sumber daya listrik >1300 VA                ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (4) Kembali ke golongan pengguna usaha          ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan sumber daya listrik yang anda gunakan : ");
    while (scanf  ("%d", &pilih)==0 || pilih<0 || pilih>4){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan sumber daya listrik yang anda gunakan : ");
        while (pilih=getchar() != '\n');
    }
    if (pilih == 4){
        close();
        usaha();
    }
    close();

    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||                   Niaga Besar                   ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan nama anda : ");
    scanf("%[^\n]s", &nama);
    printf("\n\tMasukkan tanggal pembayaran :  ");
    while (scanf  ("%f", &tanggal)==0 || tanggal<1 || tanggal>31){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan tanggal pembayaran :  ");
        while (tanggal=getchar() != '\n');
    }
    printf("\n\tMasukkan pemakaian sebelumnya (m^3) :  ");
    while (scanf  ("%f", &bulanlalu)==0){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan pemakaian sebelumnya  (m^3)  :  ");
        while (bulanlalu=getchar() != '\n');
    }
    printf("\n\tMasukkan pemakaian saat ini (m^3) :  ");
    while (scanf  ("%f", &bulanini)==0 || bulanini<bulanlalu){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan pemakaian sebelumnya  (m^3)  :  ");
        while (bulanini=getchar() != '\n');
    }

    float pemakaian = bulanini - bulanlalu;

    if (pemakaian > 100 && tanggal > 15){
        denda = 2000 * pemakaian;
    }else if (pemakaian >= 10 && pemakaian <=100 && tanggal > 15){
        denda = 1000 * pemakaian;
    }else if (tanggal <= 15){
        denda = 0;
    }
    close();

    float biayapemakaian;
    float tarifperkubik;
    if (pemakaian >=0 && pemakaian <=10 && pilih==0){
        biayapemakaian = administrasi + 2000 + (11600*pemakaian) + denda; 
         tarifperkubik = (11600*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilih==0){
        biayapemakaian = administrasi + 2000 + (12250*pemakaian) + denda;
         tarifperkubik = (12250*pemakaian);
    }else if(pemakaian >20 && pilih==0){
        biayapemakaian = administrasi + 2000 + (14750*pemakaian) + denda;
         tarifperkubik = (14750*pemakaian);
    }else if (pemakaian >=0 && pemakaian <=10 && pilih==1){
        biayapemakaian = administrasi + 2000 + (11900*pemakaian) + denda; 
         tarifperkubik = (11900*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilih==1){
        biayapemakaian = administrasi + 2000 + (12550*pemakaian) + denda;
         tarifperkubik = (12550*pemakaian);
    }else if(pemakaian >20 && pilih==1){
        biayapemakaian = administrasi + 2000 + (15050*pemakaian) + denda;
         tarifperkubik = (15050*pemakaian);
    }else if (pemakaian >=0 && pemakaian <=10 && pilih==2){
        biayapemakaian = administrasi + 2000 + (12200*pemakaian) + denda; 
         tarifperkubik = (12200*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilih==2){
        biayapemakaian = administrasi + 2000 + (12850*pemakaian) + denda;
         tarifperkubik = (12850*pemakaian);
    }else if(pemakaian >20 && pilih==2){
        biayapemakaian = administrasi + 2000 + (15850*pemakaian) + denda;
         tarifperkubik = (15850*pemakaian);
    }else if (pemakaian >=0 && pemakaian <=10 && pilih==3){
        biayapemakaian = administrasi + 2000 + (12500*pemakaian) + denda; 
         tarifperkubik = (12500*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilih==3){
        biayapemakaian = administrasi + 2000 + (13150*pemakaian) + denda;
         tarifperkubik = (13150*pemakaian);
    }else if(pemakaian >20 && pilih==3){
        biayapemakaian = administrasi + 2000 + (16650*pemakaian) + denda;
         tarifperkubik = (16650*pemakaian);
    }


        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\t||                CV. KADITA WATER                 ||");
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\t||           Air Jernih Gak Bikin Risih            ||");
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\tGolongan Niaga Besar : %s", golongan[pilih]);
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf ("\n\tNama : %s", nama);
        printf ("\n\tTanggal pembayaran : %.0f", tanggal);
        printf ("\n\tSumber Daya Listrik Digunakan = %sVA", dayalistrik[pilih]);
        printf("\n\tPemakaian anda bulan ini = %.0f (m^3)", pemakaian);
        printf ("\n\tBiaya Administrasi      = Rp. %d", biayadministrasi);
        printf ("\n\tBiaya BPM Usaha         = Rp. %d", bpmu);
        printf ("\n\tBiaya denda             = Rp. %d", denda);
        printf ("\n\tBiaya pemakaian air(m^3)= Rp. %.2f", tarifperkubik);
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf ("\n\tjumlah tagihan anda : Rp %.2f", biayapemakaian);

        int cetak;
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\t||  Apakah anda ingin mencetak bukti pembayaran ?  ||");
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\t|| (1) Iyaa                                        ||");
        printf("\n\t|| (2) Tidak                                       ||");
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\tMasukkan pilihan anda : ");
        while (scanf  ("%d", &cetak)==0 || cetak<0 || cetak>2){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan pilihan anda : ");
        while (cetak=getchar() != '\n');
    }
        if (cetak==1){
            cetakniagabesar(golongan, pilih, nama, tanggal, dayalistrik,pemakaian, biayadministrasi, bpmu, denda, tarifperkubik, biayapemakaian);
        }else if(cetak==2){
            close();
            ulang();
        }
}

void rumahtangga(){
    int menu;
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||               Golongan Rumah Tangga             ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (1) Non Niaga Bersubsidi                        ||");
    printf("\n\t|| (2) Non Niaga Tanpa Bersubsidi                  ||");
    printf("\n\t|| (3) Non Niaga Memiliki Usaha                    ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (0) Kembali ke golongan pengguna                ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan golongan Pengguna :  ");
    while (scanf  ("%d", &menu)==0 || menu<0 || menu>3){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan golongan Pengguna :  ");
        while (menu=getchar() != '\n');
    }
    close();

    if (menu==1){
        non_niaga_bersubsidi();
    }else if (menu==2){
        non_niaga_tanpa_bersubsidi();
    }else if(menu == 3){
        rumah_tangga_b();
    }else if(menu == 0){
        golonganpengguna();
    }
}

