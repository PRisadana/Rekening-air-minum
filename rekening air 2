        biayapemakaian = administrasi + 1000 + (5880*pemakaian) + denda;
         tarifperkubik = (5880*pemakaian);
    }else if (pemakaian >=0 && pemakaian <=10 && pilihukuranjalan==0 && pilihdayalistrik==1){
        biayapemakaian = administrasi + 1000 + (2060*pemakaian) + denda; 
         tarifperkubik = (2060*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilihukuranjalan==0 && pilihdayalistrik==1){
        biayapemakaian = administrasi + 1000 + (2340*pemakaian) + denda;
