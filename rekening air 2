void cetaknonniagabersubsidi(int pilihukuranjalan, int pilihdayalistrik, char nama[50], float tanggal, int dayalistrik[2], float pemakaian, int biayadministrasi, int bpmrt, int denda, float tarifperkubik, float biayapemakaian ){
    //menulis file ke txt
     //membuat pointer
    FILE *fptr;

    //membuka file
    fptr = fopen("rekeningair2.txt", "w");

    if (fptr==NULL){
        printf ("\n\tFile tidak ditemukan");
        exit(0);
    }

        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf(fptr, "\n\t||                CV. KADITA WATER                 ||");
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf(fptr, "\n\t||           Air Jernih Gak Bikin Risih            ||");
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf(fptr, "\n\tGolongan Non Niaga Bersubsidi : D%d-%d", pilihukuranjalan + 1, pilihdayalistrik + 1);
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf (fptr, "\n\tNama : %s", nama);
        fprintf (fptr, "\n\tTanggal pembayaran : %.0f", tanggal);
        fprintf (fptr, "\n\tSumber Daya Listrik Digunakan = %dVA", dayalistrik[pilihdayalistrik]);
        fprintf(fptr, "\n\tPemakaian anda bulan ini = %.0f (m^3)", pemakaian);
        fprintf (fptr, "\n\tBiaya Administrasi      = Rp. %d", biayadministrasi);
        fprintf (fptr, "\n\tBiaya BPM Rumah Tangga  = Rp. %d", bpmrt);
        fprintf (fptr, "\n\tBiaya denda             = Rp. %d", denda);
        fprintf (fptr, "\n\tBiaya pemakaian air(m^3)= Rp. %.2f", tarifperkubik);
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf (fptr, "\n\tjumlah tagihan anda : Rp %.2f", biayapemakaian);

        fclose(fptr);//tutup file

        printf("\n\tPembayaran telah berhasil dicetak!!!\n");
        ulang();
}

void cetaknonniagatanpabersubsidi(int pilihukuranjalan, int pilihdayalistrik, char nama[50], float tanggal, char dayalistrik[2] [6], float pemakaian, int biayadministrasi, int bpmrt, int denda, float tarifperkubik, float biayapemakaian){
     //menulis file ke txt
     //membuat pointer
    FILE *fptr;

    //membuka file
    fptr = fopen("rekeningair2.txt", "w");

    if (fptr==NULL){
        printf ("\n\tFile tidak ditemukan");
        exit(0);
    }

        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf(fptr, "\n\t||                CV. KADITA WATER                 ||");
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf(fptr, "\n\t||           Air Jernih Gak Bikin Risih            ||");
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf(fptr, "\n\tGolongan Non Niaga Tanpa Bersubsidi : D%d-%d", pilihukuranjalan + 1, pilihdayalistrik + 3);
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf (fptr, "\n\tNama : %s", nama);
        fprintf (fptr, "\n\tTanggal pembayaran : %.0f", tanggal);
        fprintf (fptr, "\n\tSumber Daya Listrik Digunakan = %sVA", dayalistrik[pilihdayalistrik]);
        fprintf(fptr, "\n\tPemakaian anda bulan ini = %.0f (m^3)", pemakaian);
        fprintf (fptr, "\n\tBiaya Administrasi      = Rp. %d", biayadministrasi);
        fprintf (fptr, "\n\tBiaya BPM Rumah Tangga  = Rp. %d", bpmrt);
        fprintf (fptr, "\n\tBiaya denda             = Rp. %d", denda);
        fprintf (fptr, "\n\tBiaya pemakaian air(m^3)= Rp. %.2f", tarifperkubik);
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf (fptr, "\n\tjumlah tagihan anda : Rp %.2f", biayapemakaian);

        fclose(fptr);//tutup file

        printf("\n\tPembayaran telah berhasil dicetak!!!\n");
        ulang();
}

void cetakrumahtanggab(int pilihdayalistrik, char nama[50], float tanggal, char dayalistrik[4] [6], float pemakaian, int biayadministrasi, int bpmrt, int denda, float tarifperkubik, float biayapemakaian){
    //menulis file ke txt
     //membuat pointer
    FILE *fptr;

    //membuka file
    fptr = fopen("rekeningair2.txt", "w");

    if (fptr==NULL){
        printf ("\n\tFile tidak ditemukan");
        exit(0);
    }

        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf(fptr, "\n\t||                CV. KADITA WATER                 ||");
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf(fptr, "\n\t||           Air Jernih Gak Bikin Risih            ||");
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf(fptr, "\n\tGolongan Non Niaga Tanpa Bersubsidi : D5-%d", pilihdayalistrik + 1);
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf (fptr, "\n\tNama : %s", nama);
        fprintf (fptr, "\n\tTanggal pembayaran : %.0f", tanggal);
        fprintf (fptr, "\n\tSumber Daya Listrik Digunakan = %sVA", dayalistrik[pilihdayalistrik]);
        fprintf(fptr, "\n\tPemakaian anda bulan ini = %.0f (m^3)", pemakaian);
        fprintf (fptr, "\n\tBiaya Administrasi      = Rp. %d", biayadministrasi);
        fprintf (fptr, "\n\tBiaya BPM Rumah Tangga  = Rp. %d", bpmrt);
        fprintf (fptr, "\n\tBiaya denda             = Rp. %d", denda);
        fprintf (fptr, "\n\tBiaya pemakaian air(m^3)= Rp. %.2f", tarifperkubik);
        fprintf(fptr, "\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        fprintf (fptr, "\n\tjumlah tagihan anda : Rp %.2f", biayapemakaian);

        fclose(fptr);//tutup file

        printf("\n\tPembayaran telah berhasil dicetak!!!\n");
        ulang();
}

