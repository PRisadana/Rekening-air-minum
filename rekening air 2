void non_niaga_tanpa_bersubsidi(){
    float menu, bulanini, bulanlalu, tanggal;
    int pilihukuranjalan;
    int pilihdayalistrik;
    int bpmrt = 1000;
    char nama[50];
    char dayalistrik [2] [6]= {"1300", ">1300"};
    int biayadministrasi = 5000;
    int denda;
    int biaya;
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||           Silahkan pilih kategori anda          ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tPelanggan di depan rumahnya terdapat jalan berukuran");
    printf("\n\tsesuai pilihan termasuk saluran got");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| [0] (0-3.99) meter                              ||");
    printf("\n\t|| [1] (4-6.99) meter                              ||");
    printf("\n\t|| [2] (7-10.0) meter                              ||");
    printf("\n\t|| [3] (>10) meter                                 ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (4) Kembali ke golongan pengguna rumah tangga   ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan lebar jalan yang anda gunakan : ");
    while(scanf("%d", &pilihukuranjalan) == 0 || pilihukuranjalan<0 || pilihukuranjalan>4){
        printf("\n\tKarakter yang anda inputkan salah");
        printf("\n\tSilahkan inputkan ulang");
        printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
        printf("\n\tMasukkan lebar jalan yang anda gunakan : ");
        while(pilihukuranjalan=getchar() != '\n');
    }
    if (pilihukuranjalan==4){
        close();
        rumahtangga();
    }
    close();

    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||           Silahkan pilih kategori anda          ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (0) Sumber daya listrik 1300 VA                 ||");
    printf("\n\t|| (1) Sumber daya listrik >1300 VA                ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t|| (2) Kembali ke golongan pengguna rumah tangga   ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan sumber daya listrik yang anda gunakan : ");
    while (scanf  ("%d", &pilihdayalistrik)==0 || pilihdayalistrik<0 || pilihdayalistrik>2){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan sumber daya listrik yang anda gunakan : ");
        while (pilihdayalistrik=getchar() != '\n');
    }
    if (pilihdayalistrik == 2){
        close();
        rumahtangga();
    }
    close();

    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||           Non Niaga Tanpa Bersubsidi            ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\tMasukkan nama anda : ");
    scanf("%[^\n]s", &nama);
    printf("\n\tMasukkan tanggal pembayaran :  ");
    while (scanf  ("%f", &tanggal)==0 || tanggal<1 || tanggal>31){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan tanggal pembayaran :  ");
        while (tanggal=getchar() != '\n');
    }
    printf("\n\tMasukkan pemakaian sebelumnya (m^3) :  ");
    while (scanf  ("%f", &bulanlalu)==0){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan pemakaian sebelumnya  (m^3)  :  ");
        while (bulanlalu=getchar() != '\n');
    }
    printf("\n\tMasukkan pemakaian saat ini (m^3) :  ");
    while (scanf  ("%f", &bulanini)==0 || bulanini<bulanlalu){
        printf ("\t---------------------------------------");
        printf ("\n\tKarakter yang anda inputkan salah");
        printf ("\n\tSilahkan inputkan ulang");
        printf ("\n\t---------------------------------------");
        printf("\n\tMasukkan pemakaian sebelumnya  (m^3)  :  ");
        while (bulanini=getchar() != '\n');
    }

    float pemakaian = bulanini - bulanlalu;

     if (pemakaian > 100 && tanggal > 15){
        denda = 2000 * pemakaian;
    }else if (pemakaian >= 10 && pemakaian <=100 && tanggal > 15){
        denda = 1000 * pemakaian;
    }else if (tanggal <= 15){
        denda = 0;
    }

    close();

    float biayapemakaian;
    float tarifperkubik;
    if (pemakaian >=0 && pemakaian <=10 && pilihukuranjalan==0 && pilihdayalistrik==0){
        biayapemakaian = administrasi + 1000 + (6340*pemakaian) + denda;
         tarifperkubik = (6340*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilihukuranjalan==0 && pilihdayalistrik==0){
        biayapemakaian = administrasi + 1000 + (9200*pemakaian) + denda;
         tarifperkubik = (9200*pemakaian);
    }else if(pemakaian >20 && pilihukuranjalan==0 && pilihdayalistrik==0){
        biayapemakaian = administrasi + 1000 + (9600*pemakaian) + denda;
         tarifperkubik = (9600*pemakaian);
    }else if (pemakaian >=0 && pemakaian <=10 && pilihukuranjalan==0 && pilihdayalistrik==1){
        biayapemakaian = administrasi + 1000 + (6420*pemakaian) + denda;
         tarifperkubik = (6420*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilihukuranjalan==0 && pilihdayalistrik==1){
        biayapemakaian = administrasi + 1000 + (9350*pemakaian) + denda;
         tarifperkubik = (9350*pemakaian);
    }else if(pemakaian >20 && pilihukuranjalan==0 && pilihdayalistrik==1){
        biayapemakaian = administrasi + 1000 + (9650*pemakaian) + denda;
         tarifperkubik = (9650*pemakaian);
    }else if (pemakaian >=0 && pemakaian <=10 && pilihukuranjalan==1 && pilihdayalistrik==0){
        biayapemakaian = administrasi + 1000 + (6490*pemakaian) + denda;
         tarifperkubik = (6490*pemakaian);
    }else if (pemakaian >=11 && pemakaian<=20 && pilihukuranjalan==1 && pilihdayalistrik==0){
        biayapemakaian = administrasi + 1000 + (9500*pemakaian) + denda;
         tarifperkubik = (9500*pemakaian);
    }else if(pemakaian >20 && pilihukuranjalan==1 && pilihdayalistrik==0){
        biayapemakaian = administrasi + 1000 + (9800*pemakaian) + denda;
         tarifperkubik = (9800*pemakaian);
