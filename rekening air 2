        while (pilih=getchar() != '\n');
    }
    if (pilih == 4){
        close();
        usaha();
    }
    close();

    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\n\t||                   Niaga Sedang                  ||");
    printf("\n\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
